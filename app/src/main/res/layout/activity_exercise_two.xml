<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseTwoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_exercise2_labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 2"
        android:layout_marginVertical="20dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/activity_exercise2_btn_start"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:text="To the Mars!"/>

    </LinearLayout>

    <FrameLayout
        android:layout_margin="10px"
        android:layout_gravity="center"
        android:layout_width="1000px"
        android:layout_height="1000px"
        android:background="@color/teal_200">


        <ImageView
            android:id="@+id/activity_exercise2_space"
            android:layout_width="1600px"
            android:layout_height="1600px"
            android:src="@drawable/space"
            android:background="@color/black"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/activity_exercise2_mars"
            android:layout_width="400px"
            android:layout_height="400px"
            android:src="@drawable/mars"
            android:visibility="invisible"
            android:layout_gravity="top|right"/>

        <ImageView
            android:id="@+id/activity_exercise2_earth"
            android:layout_width="400px"
            android:layout_height="400px"
            android:src="@drawable/earth"
            android:visibility="invisible"
            android:layout_gravity="bottom|left"
            />

        <ImageView
            android:id="@+id/activity_exercise2_spaceship"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center"
            />

    </FrameLayout>

</LinearLayout>