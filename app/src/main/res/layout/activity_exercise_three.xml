<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExerciseThreeActivity">

    <TextView
        android:id="@+id/activity_exercise3_labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 3"
        android:layout_marginVertical="20dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:text="Line Thickness"
                android:layout_gravity="center"
                />

            <Spinner
                android:layout_margin="10dp"
                android:id="@+id/activity_exercise3_spinner"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="3dp"
                android:text="Arrow Keys"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="40dp"
                >
                <ImageButton
                    android:id="@+id/activity_exercise3_arrow_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/summer_blue"
                    android:layout_gravity="top|center"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    />
                <ImageButton
                    android:id="@+id/activity_exercise3_arrow_down"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/summer_blue"
                    android:layout_gravity="bottom|center"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    />
                <ImageButton
                    android:id="@+id/activity_exercise3_arrow_left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/summer_blue"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    />
                <ImageButton
                    android:id="@+id/activity_exercise3_arrow_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/summer_blue"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Brush Color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/activity_exercise3_color_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/red"
            />

        <ImageButton
            android:id="@+id/activity_exercise3_color_green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/green"
            />

        <ImageButton
            android:id="@+id/activity_exercise3_color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_exercise3_canvas"
        android:layout_gravity="center"
        android:layout_width="1000px"
        android:layout_height="1000px"
        android:background="@color/teal_200"
        />

    <Button
        android:id="@+id/activity_exercise3_button_reset"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="reset"
        />


</LinearLayout>

